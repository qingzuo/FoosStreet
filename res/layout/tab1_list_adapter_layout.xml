<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_margin="5dp"
    android:descendantFocusability="blocksDescendants" >

    <ImageView
        android:id="@+id/tab1_list_item_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:padding="5dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/tab1_list_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/tab1_list_item_image"
        android:layout_toRightOf="@id/tab1_list_item_image"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tab1_list_item_describe"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_alignLeft="@id/tab1_list_item_title"
        android:layout_below="@id/tab1_list_item_title" />

    <TextView
        android:id="@+id/tab1_list_item_food_price"
        android:layout_width="130dp"
        android:layout_height="20dp"
        android:layout_alignLeft="@id/tab1_list_item_describe"
        android:layout_below="@id/tab1_list_item_describe" />

    <RatingBar
        android:id="@+id/tab1_list_item_rating_bar"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tab1_list_item_food_price"
        android:layout_below="@id/tab1_list_item_food_price"
        android:layout_marginTop="5dp"
        android:max="10"
        android:progress="9"
        android:numStars="5"
        android:stepSize="0.5" />

    <Button
        android:id="@+id/tab1_list_item_add"
        android:layout_width="80dp"
        android:layout_height="39dp"
        android:layout_alignParentRight="true"
		android:layout_alignParentTop="true"
        android:background="@drawable/message_button_background_selector"
        android:focusable="false"
        android:text="加入订单"
        android:textSize="10sp" />

    <ImageView
        android:id="@+id/tab1_list_item_divide2"
        android:layout_width="80dp"
        android:layout_height="2dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/tab1_list_item_add"
        android:background="@android:color/darker_gray" />

    <Button
        android:id="@+id/tab1_list_item_more"
        android:layout_width="80dp"
        android:layout_height="39dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/tab1_list_item_divide2"
        android:background="@drawable/message_button_background_selector"
        android:focusable="false"
        android:text="更多"
        android:textSize="10sp" />

</RelativeLayout>