<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/bt_newfind_clear"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="2"
                android:background="@drawable/app_button_select"
                android:text="清空"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/bt_newfind_share"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="2"
                android:background="@drawable/app_button_select"
                android:text="分享"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <EditText
            android:id="@+id/et_newFind_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="请输入名称" />

        <EditText
            android:id="@+id/et_newFind_shop"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="商店地址/名称" />
        
        <TextView android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="分享图片"/>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp" >

            <ImageView
                android:id="@+id/iv_newfind_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentLeft="true"
                android:src="@drawable/ic_launcher" />

            <Button
                android:id="@+id/bt_newfind_takeImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="5dp"
                android:layout_weight="0"
                android:background="@drawable/app_button_select"
                android:text="拍照"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/bt_newfind_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/bt_newfind_takeImage"
                android:layout_margin="5dp"
                android:layout_weight="0"
                android:background="@drawable/app_button_select"
                android:text="图库"
                android:textColor="@android:color/white" />
        </RelativeLayout>

        <EditText
            android:id="@+id/et_newFind_describe"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="描述" />
    </LinearLayout>

</ScrollView>