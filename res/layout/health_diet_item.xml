<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:descendantFocusability="blocksDescendants" 
    android:padding="10dp" >

    <TextView
        android:id="@+id/tv_healthdiet_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/bt_healthdiet_more"
        android:singleLine="true"
        android:text="title"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_healthdiet_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_healthdiet_title"
        android:layout_toLeftOf="@+id/bt_healthdiet_more"
        android:maxLines="2"
        android:paddingLeft="10dp"
        android:text="body"
        android:textSize="16sp" />

    <Button
        android:id="@+id/bt_healthdiet_more"
        android:layout_width="wrap_content"
        android:focusable="false"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/app_button_select"
        android:onClick="onHealDietClick"
        android:text="更多"
        android:textColor="@android:color/white" />

</RelativeLayout>